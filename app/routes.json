{
    "/": {
        "GET": {
            "controller": "Home",
            "handler": "index"
        }
    },
    "/login": {
        "GET": {
            "controller": "Auth",
            "handler": "getLogin",
            "auth": [false, "/dashboard"]
        },
        "POST": {
            "controller": "Auth",
            "handler": "login"
        }
    },
    "/signup": {
        "GET": {
            "controller": "Auth",
            "handler": "getSignup",
            "auth": [false, "/leaderboard"]
        },
        "POST": {
            "controller": "Auth",
            "handler": "signup",
            "auth": [false, "/leaderboard"]
        }
    },
    "/logout": {
        "GET": {
            "controller": "Auth",
            "handler": "logout",
            "auth": [true, "/login"]
        }
    },
    "/dashboard": {
        "GET": {
            "controller": "User",
            "handler": "dashboard",
            "auth": [true, "/login?r_url=/dashboard"]
        }
    },
    "/quiz/:quizId": {
        "GET": {
            "controller": "Quiz",
            "handler": "getQuiz",
            "params": {
                "quizId": "string"
            }
        }
    },
    "/leaderboard": {
        "GET": {
            "controller": "Quiz",
            "handler": "getLeaderboard",
            "auth": [true, "/login"]
        }
    }
}